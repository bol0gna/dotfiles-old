" When started as "evim", evim.vim will already have done these settings.
if v:progname =~? "evim"
  finish
endif

" Get the defaults that most users want.
" source $VIMRUNTIME/defaults.vim

set nocompatible
set encoding=utf-8
set ttyfast
set lazyredraw
syntax on
filetype plugin indent on
set clipboard=unnamedplus
set ruler
set number
" set relativenumber
" augroup numbertoggle
"    autocmd!
"    autocmd BufEnter,FocusGained,InsertLeave * set relativenumber
"    autocmd BufLeave,FocusLost,InsertEnter   * set norelativenumber
" augroup END
set showmode
set laststatus=2
set modelines=0
set showcmd
set wildmenu

set backspace=indent,eol,start
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4

set ignorecase
set smartcase
set incsearch
set showmatch
set hlsearch

set backupdir=/tmp//
set undodir=/tmp//
set directory=/tmp//

" colorscheme solarized
" set background=dark
